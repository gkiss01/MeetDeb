<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/limedSpruceBlueDark</item>
        <item name="colorOnPrimary">@color/alabasterWhite</item>
        <item name="colorPrimaryVariant">@color/limedSpruceBlue</item>

        <item name="colorPrimaryDark">@color/limedSpruceBlueDark</item>
        <item name="colorAccent">@color/juniperGreen</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/alabasterWhiteDark</item>
        <item name="colorOnSurface">@color/tuataraGray</item>
        <item name="colorOnSurfaceSecondary">@color/boulderGray</item>

        <!-- Errors and warnings (on all) -->
        <item name="colorError">@color/cinnabarRed</item>
        <item name="colorWarning">@color/anzacYellow</item>

        <!-- Button colors (on primary) -->
        <item name="colorOnPrimaryButtonActionBg">@color/blackGray</item>
        <item name="colorOnPrimaryButtonActionText">@color/alabasterWhiteDark</item>

        <item name="colorOnPrimaryButtonPickerBg">@color/juniperGreen</item>
        <item name="colorOnPrimaryButtonPickerText">@color/alabasterWhiteDark</item>

        <!-- Fab colors (on primary) -->
        <item name="colorOnPrimaryFabNormal">@color/lynchBlue</item>
        <item name="colorOnPrimaryFabActivated">@color/lynchBlueDark</item>
        <item name="colorOnPrimaryFabMiniNormal">@color/lynchBlue</item>
        <item name="colorOnPrimaryFabMiniActivated">@color/lynchBlueDark</item>

        <!-- Button gradients (on surface) -->
        <item name="colorOnSurfaceButtonDeleteStart">@color/anzacYellow</item>
        <item name="colorOnSurfaceButtonDeleteEnd">@color/cinnabarRed</item>
        <item name="colorOnSurfaceButtonNormalStart">@color/limedSpruceBlueDark</item>
        <item name="colorOnSurfaceButtonNormalEnd">@color/limedSpruceBlue</item>
        <item name="colorOnSurfaceButtonDynamicBg">@color/opalBlue</item>

        <!-- Text fields (on each) -->
        <item name="colorOnPrimaryTextField">@color/alabasterWhite</item>
        <item name="colorOnSurfaceTextField">@color/tuataraGray</item>

        <!-- Material drawer -->
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleCustom</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyleCustom</item>

        <!-- Modal Bottom Sheet -->
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>

        <!-- Application -->
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Modal Bottom Sheet -->
    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ModalBottomSheetAppearance</item>
    </style>

    <style name="ModalBottomSheetAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Material drawer -->
    <style name="Widget.MaterialDrawerStyleCustom" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerBackground">?attr/colorPrimary</item>
        <item name="materialDrawerPrimaryText">?attr/colorOnPrimary</item>
        <item name="materialDrawerPrimaryIcon">?attr/colorOnPrimary</item>
        <item name="materialDrawerSecondaryText">?attr/colorOnPrimary</item>
        <item name="materialDrawerSecondaryIcon">?attr/colorOnPrimary</item>
        <item name="materialDrawerDividerColor">?attr/colorOnPrimary</item>
        <item name="materialDrawerSelectedBackgroundColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MaterialDrawerHeaderStyleCustom" parent="Widget.MaterialDrawerHeaderStyle">
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerHeaderSelectionText">?attr/colorOnPrimary</item>
        <item name="materialDrawerHeaderSelectionSubtext">?attr/colorOnPrimary</item>
    </style>

    <!-- Buttons -->
    <style name="WidgetButtonDynamicBackground">
        <item name="android:background">@null</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="WidgetButtonAction">
        <item name="android:background">@drawable/button_action_background</item>
        <item name="android:textColor">?attr/colorOnPrimaryButtonActionText</item>
    </style>

    <style name="WidgetButtonPicker">
        <item name="android:background">?attr/colorOnPrimaryButtonPickerBg</item>
        <item name="android:textColor">?attr/colorOnPrimaryButtonPickerText</item>
    </style>

    <style name="WidgetButtonRegister">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimaryTextField</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WidgetButtonBottomSheetBase">
        <item name="android:background">@drawable/button_normal_background</item>
        <item name="android:textColor">?attr/colorOnPrimaryTextField</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="WidgetButtonBottomSheetDelete">
        <item name="android:background">@drawable/button_delete_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="WidgetButtonBottomSheetCancel">
        <item name="android:background">@drawable/button_cancel_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Labels -->
    <style name="WidgetLabelEventName">
        <item name="android:background">@color/siroccoGray</item>
        <item name="android:textColor">@color/alabasterWhite</item>
        <item name="android:textSize">35sp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WidgetLabelSelectedDate">
        <item name="android:textColor">?attr/colorOnPrimaryTextField</item>
        <item name="android:ems">10</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Text fields -->
    <style name="WidgetInputTextFieldError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetInputTextFieldLightHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimaryTextField</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WidgetInputTextFieldLight" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/WidgetInputTextFieldLightHint</item>
        <item name="errorTextAppearance">@style/WidgetInputTextFieldError</item>

        <item name="android:textColor">?attr/colorOnPrimaryTextField</item>
        <item name="android:textColorHint">?attr/colorOnPrimaryTextField</item>
        <item name="colorControlNormal">?attr/colorOnPrimaryTextField</item>
        <item name="colorControlActivated">?attr/colorOnPrimaryTextField</item>
        <item name="colorControlHighlight">?attr/colorOnPrimaryTextField</item>
    </style>

    <style name="WidgetInputTextFieldDarkHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnSurfaceTextField</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WidgetInputTextFieldDark" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/WidgetInputTextFieldDarkHint</item>
        <item name="errorTextAppearance">@style/WidgetInputTextFieldError</item>

        <item name="android:textColor">?attr/colorOnSurfaceTextField</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceTextField</item>
        <item name="colorControlNormal">?attr/colorOnSurfaceTextField</item>
        <item name="colorControlActivated">?attr/colorOnSurfaceTextField</item>
        <item name="colorControlHighlight">?attr/colorOnSurfaceTextField</item>
    </style>
</resources>
