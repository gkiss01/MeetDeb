<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="styleCreateEventText">
        <item name="android:textColor">@color/colorCreateEventText</item>
        <item name="android:textColorHint">@color/colorCreateEventText</item>
        <item name="android:backgroundTint">@color/colorCreateEventText</item>
        <item name="android:ems">10</item>
    </style>

    <style name="styleFabLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/colorCreateEventText</item>
    </style>

    <style name="styleSetterButton">
        <item name="android:background">@color/colorCreateEventButton</item>
        <item name="android:textColor">@color/colorCreateEventText</item>
    </style>

    <style name="styleEventButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorEventButtonText</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="styleMatisseDark" parent="Matisse.Dracula">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar">@color/colorPrimary</item>

        <item name="album.dropdown.title.color">#FFFFFF</item>
        <item name="album.dropdown.count.color">#FFFFFF</item>

        <item name="bottomToolbar.bg">#000000</item>
        <item name="bottomToolbar.preview.textColor">#FFFFFF</item>
        <item name="bottomToolbar.apply.textColor">#FFFFFF</item>
        <item name="preview.bottomToolbar.back.textColor">#FFFFFF</item>
        <item name="preview.bottomToolbar.apply.textColor">#FFFFFF</item>

        <item name="android:listPopupWindowStyle">@style/stylePopup</item>
        <item name="listPopupWindowStyle">@style/stylePopup</item>

        <item name="capture.textColor">#FFFFFF</item>
    </style>

    <style name="stylePopup" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
</resources>
