<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.gkiss01.meetdeb.screens.EventsFragment"
        android:label="EventsFragment"
        tools:layout="@layout/events_fragment">
        <action
            android:id="@+id/action_eventsFragment_to_createEventFragment"
            app:destination="@id/createEventFragment"
            app:popUpTo="@+id/eventsFragment" />
        <action
            android:id="@+id/action_eventsFragment_to_detailsDialogFragment"
            app:destination="@id/detailsDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.gkiss01.meetdeb.screens.CreateEventFragment"
        android:label="CreateEventFragment"
        tools:layout="@layout/create_event_fragment">
        <action
            android:id="@+id/action_createEventFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.gkiss01.meetdeb.screens.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gkiss01.meetdeb.screens.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.gkiss01.meetdeb.screens.LoadingFragment"
        android:label="LoadingFragment"
        app:startDestination="@id/action_loadingFragment_to_registerFragment"
        tools:layout="@layout/loading_fragment">
        <action
            android:id="@+id/action_loadingFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/loadingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loadingFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsDialogFragment"
        android:name="com.gkiss01.meetdeb.screens.DetailsDialogFragment"
        android:label="DetailsDialogFragment"
        tools:layout="@layout/details_fragment">
        <argument
            android:name="event"
            app:argType="com.gkiss01.meetdeb.data.Event" />
    </fragment>
</navigation>