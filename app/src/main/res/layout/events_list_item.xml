<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/eli_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/eli_creatorLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawableStart="@drawable/ic_name"
        android:drawablePadding="5dp"
        android:drawableTint="#b0c5c2"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/eli_moreButton"/>

    <ImageView
        android:id="@+id/eli_moreButton"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:contentDescription="@string/event_more_button_desc"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@id/eli_creatorLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/eli_creatorLabel" />

    <ImageView
        android:id="@+id/eli_eventImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/event_image_desc"
        android:maxHeight="450dp"
        android:minHeight="250dp"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eli_creatorLabel" />

    <TextView
        android:id="@+id/eli_eventLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#73808080"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@id/eli_eventImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eli_eventImage" />

    <Button
        android:id="@+id/eli_descButton"
        style="@style/styleFabLabel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/event_desc_button"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/eli_eventImage"
        app:layout_constraintTop_toTopOf="@id/eli_eventImage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/event_buttons_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/eli_eventImage">

        <Button
            android:id="@+id/eli_anotherDateButton"
            style="@style/styleEventButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/event_date_add"
            app:layout_constraintEnd_toStartOf="@id/eli_acceptButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/eli_acceptButton"
            style="@style/styleEventButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/eli_anotherDateButton"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
